<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yummy.doubanlibrary.NoBoringActionBarActivity" >

    <ListView
        android:id="@+id/lvCompetition"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <FrameLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_header_height" >

        <com.codecomb.view.notboringcationbar.KenBurnsView
            android:id="@+id/header_picture"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/picture0" />

        <ImageView
            android:id="@+id/header_logo"
            android:layout_width="@dimen/dim_header_logo_size"
            android:layout_height="@dimen/dim_header_logo_size"
            android:layout_gravity="center"
            android:src="@drawable/ic_launcher" />
    </FrameLayout>

</FrameLayout>