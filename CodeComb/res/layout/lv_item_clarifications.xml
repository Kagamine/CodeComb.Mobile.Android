<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/vClarificationTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/dim_lv_item_normal_margin"
        android:textSize="@dimen/dim_lv_item_large_text_size"
        android:text="NOIP 普及组" />

    <TextView
        android:id="@+id/vClarificationStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/dim_lv_item_small_margin"
        android:layout_marginBottom="@dimen/dim_lv_item_smallest_margin"
        android:text="Pending" />

</LinearLayout>