<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ufreedom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/col_white"
    tools:context=".MessageActivity" >

    <include
        android:id="@+id/vChatNavigationBar"
        android:layout_alignParentTop="true"
        layout="@layout/layout_chat_contact_navigation" />

    <ProgressBar
        android:id="@+id/vEmptyView"
        style="@style/largeCustomProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <ListView
        android:id="@+id/lvContact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/vChatNavigationBar" />

</RelativeLayout>