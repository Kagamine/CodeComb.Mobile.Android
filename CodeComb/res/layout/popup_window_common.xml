<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/col_white"
    android:gravity="center" >

    <FrameLayout
        android:id="@+id/vcontentViewPanel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="bottom|center"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/vProgressPanel"
            android:layout_width="160dip"
            android:layout_height="wrap_content"
            android:background="@drawable/window_hint_bg"
            android:gravity="bottom|center"
            android:minWidth="160.0dip" >

            <ProgressBar
                android:id="@+id/position_progress"
                style="@style/largeCustomProgressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" />

            <TextView
                android:id="@+id/vProgressInfo"
                android:layout_width="160.0dip"
                android:layout_height="wrap_content"
                android:layout_below="@id/position_progress"
                android:layout_marginTop="@dimen/dim_16dp"
                android:gravity="center"
                android:minHeight="40.0dip"
                android:textColor="@color/col_chat_white"
                android:textSize="15.0dip" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/vCancelIconsmall"
            android:layout_width="30.0dip"
            android:layout_height="30.0dip"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="20.0dip"
            android:background="@drawable/window_cancel_bg"
            android:padding="7.0dip"
            android:src="@drawable/rcd_cancel_icon"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/vCanclePanel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/window_hint_bg"
            android:gravity="center_horizontal"
            android:minWidth="160.0dip"
            android:orientation="vertical"
            android:visibility="gone" >

            <ImageView
                android:id="@+id/voice_rcd_hint_cancel_icon"
                android:layout_width="160.0dip"
                android:layout_height="120.0dip"
                android:src="@drawable/rcd_cancel_icon" />

            <TextView
                android:id="@+id/voice_rcd_hint_cancel_text"
                android:layout_width="160.0dip"
                android:layout_height="wrap_content"
                android:layout_below="@id/voice_rcd_hint_cancel_icon"
                android:layout_centerHorizontal="true"
                android:background="@drawable/rcd_cancel_bg"
                android:gravity="center"
                android:minHeight="40.0dip"
                android:text="已经取消"
                android:textColor="@color/col_chat_white"
                android:textSize="15.0dip" />
        </RelativeLayout>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/vcontentViewPanelMedium"
        android:layout_width="140.0dip"
        android:layout_height="140.0dip"
        android:background="@drawable/window_hint_bg"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone" >

        <ProgressBar
            android:id="@+id/progressBar1"
            style="@style/mediumCustomProgressBar"
            android:layout_width="80.0dip"
            android:layout_height="80.0dip"
            android:layout_centerInParent="true"
            android:layout_gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/vWornPanel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/window_hint_bg"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone" >

        <ImageView
            android:layout_width="160.0dip"
            android:layout_height="120.0dip"
            android:src="@drawable/ic_popup_winodw_worn" />

        <TextView
            android:id="@+id/vWornInfo"
            android:layout_width="160.0dip"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minHeight="40.0dip"
            android:textColor="@color/col_chat_white"
            android:textSize="15.0dip" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/vOKPanel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/window_hint_bg"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone" >

        <ImageView
            android:layout_width="160.0dip"
            android:layout_height="120.0dip"
            android:src="@drawable/ic_popup_window_ok" />

        <TextView
            android:id="@+id/vOkInfo"
            android:layout_width="160.0dip"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minHeight="40.0dip"
            android:textColor="@color/col_chat_white"
            android:textSize="15.0dip" />
    </LinearLayout>

</LinearLayout>